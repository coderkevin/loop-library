{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist-electron",
    "rootDir": "./src",
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["src/main/**/*.ts", "src/shared/**/*.ts"],
  "exclude": [
    "src/renderer/**",
    "src/shared/**/*.test.ts",
    "src/shared/**/*.test.tsx",
    "src/main/**/*.test.ts",
    "src/main/**/*.test.tsx"
  ]
}
